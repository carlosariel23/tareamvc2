@model codefirts.Models.Empleado

@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-person-circle"></i> Detalles del Empleado</h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Nombre</th>
                                <td>@Html.DisplayFor(model => model.Nombre)</td>
                            </tr>
                            <tr>
                                <th>Teléfono</th>
                                <td>@Html.DisplayFor(model => model.Telefono)</td>
                            </tr>
                            <tr>
                                <th>DUI</th>
                                <td>@Html.DisplayFor(model => model.DUI)</td>
                            </tr>
                            <tr>
                                <th>Dirección</th>
                                <td>@Html.DisplayFor(model => model.Direccion)</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
