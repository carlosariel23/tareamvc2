@model codefirts.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Eliminar Empleado</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center text-danger">¿Estás seguro de que deseas eliminar este empleado?</h5>
                    <hr />

                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Nombre</th>
                                <td>@Html.DisplayFor(model => model.Nombre)</td>
                            </tr>
                            <tr>
                                <th>Teléfono</th>
                                <td>@Html.DisplayFor(model => model.Telefono)</td>
                            </tr>
                            <tr>
                                <th>DUI</th>
                                <td>@Html.DisplayFor(model => model.DUI)</td>
                            </tr>
                            <tr>
                                <th>Dirección</th>
                                <td>@Html.DisplayFor(model => model.Direccion)</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                            </tr>
                        </tbody>
                    </table>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
